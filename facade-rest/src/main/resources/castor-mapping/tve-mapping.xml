<mapping>
       
    <class name="ru.cti.tve.rest.api.BtvChannels">
        <field name="contacts" type="ru.cti.tve.rest.api.BtvChannel" collection="arraylist">
            <bind-xml name="btvChannel"/>
        </field>    
    </class>
    
    <class name="ru.cti.tve.rest.api.BtvChannel" identity="id">
        <map-to xml="btvChannel" />
        <field name="id" type="long">
            <bind-xml name="id" node="element"/>
        </field>             
        <field name="name" type="string">
            <bind-xml name="name" node="element" />
        </field>
    </class>
            
</mapping>